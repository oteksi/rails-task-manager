<div class="container">

  <h1>List of tasks</h1>

  <ul>
  <% @tasks.each do |task| %>
    <li class="task">
      <% if task.completed %>
        <input type="checkbox" checked>
      <% else %>
        <input type="checkbox">
      <% end  %>
      <%= link_to task.title, task_path(task) %>

      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
  </ul>

  <%= link_to "+ Add a new task", new_task_path %>

</div>
